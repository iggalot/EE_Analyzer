<Window x:Class="wyDay.TurboActivate.ReVerifyNow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Re-verify with the activation servers" Width="300" SizeToContent="Height" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel>
        <TextBlock TextWrapping="WrapWithOverflow" Name="lblDescr" Padding="10,3">You have X days to re-verify with the activation servers.</TextBlock>

        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="_Re-verify now" IsDefault="True" Margin="5" Name="btnReverify" Click="btnReverify_Click" Padding="10,3" />
            <Button Content="E_xit application" IsCancel="True" Margin="5" Name="btnExit" Click="btnExit_Click" Padding="10,3" />
        </StackPanel>
    </StackPanel>
</Window>
